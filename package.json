{
  "name": "inventory-management",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo --port 3001",
    "build": "next build",
    "build:time": "echo 'Build started at %time%' && next build && echo 'Build completed at %time%'",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "ai:validate": "pnpm ai:type-check && pnpm lint && pnpm format --check",
    "ai:validate:full": "pnpm type-check && pnpm lint && pnpm format --check",
    "ai:type-check": "tsc --noEmit --skipLibCheck",
    "ai:fix": "pnpm lint --fix && pnpm format --write",
    "ai:commit": "pnpm ai:validate && git add . && git commit",
    "commit:fast": "git add . && git commit --no-verify -m",
    "commit:safe": "git add . && git commit -m",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy:auto": "git add . && git commit -m \"Auto deployment\" && git push origin main",
    "supabase:types": "npx supabase gen types typescript --local > src/types/database.ts",
    "clean": "rm -rf .next",
    "clean:all": "rm -rf .next node_modules && pnpm install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-form": "^0.1.1",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@supabase/supabase-js": "^2.49.1",
    "@tanstack/react-query": "^5.62.11",
    "@tanstack/react-query-devtools": "^5.62.11",
    "ag-grid-community": "^33.5.1",
    "ag-grid-react": "^33.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.3",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.469.0",
    "next": "^15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "eslint": "^9.15.0",
    "eslint-config-next": "^15.4.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "supabase": "^1.213.3",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  }
}