{
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--project-ref=jjpklpivpvywagmjjwpu"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${input:supabase-access-token}"
      },
      "autoApprove": [
        "supabase_db_query",
        "supabase_db_execute",
        "supabase_list_tables",
        "supabase_describe_table",
        "supabase_db_list_tables",
        "supabase_db_describe_table",
        "supabase_db_query_sql",
        "supabase_db_execute_sql"
      ]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@andrebuzeli/github-mcp-v2@latest"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github-personal-access-token}"
      },
      "autoApprove": [
        "github_push_files",
        "github_update_file",
        "github_create_issue",
        "github_get_file",
        "github_list_files",
        "github_search_code",
        "github_list_commits",
        "github_get_commit"
      ]
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "supabase-access-token",
      "description": "Supabase personal access token",
      "password": true
    },
    {
      "type": "promptString",
      "id": "github-personal-access-token",
      "description": "GitHub personal access token (repo, workflow, read:org, user scopes recommended)",
      "password": true
    }
  ]
}
