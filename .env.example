# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Required for App)
# Get these from: https://supabase.com/dashboard/project/jjpklpivpvywagmjjwpu/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://jjpklpivpvywagmjjwpu.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# MCP Server Tokens (Required for AI Tools)
# Get Supabase token from: https://supabase.com/dashboard/account/tokens
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here

# Get GitHub token from: https://github.com/settings/tokens (with repo, workflow, read:org, user scopes)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_personal_access_token_here

# Optional: Database URL for direct connections
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Optional: NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret_here

# Optional: Analytics
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Optional: Error Monitoring
SENTRY_DSN=your_sentry_dsn_here
