# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =================================
# SUPABASE APP CONFIGURATION (REQUIRED)
# =================================
# Get these from: https://supabase.com/dashboard/project/jjpklpivpvywagmjjwpu/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://jjpklpivpvywagmjjwpu.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =================================
# AI TOOLS - MCP SERVER CONFIGURATION (REQUIRED)
# =================================
# Use these for AI-assisted development (read-only, safe exploration)
# Examples: "AI, show me inventory levels", "AI, create test data"

# Supabase MCP Server Token
# Get from: https://supabase.com/dashboard/account/tokens
# Required scopes: Full access to your organization
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here

# GitHub MCP Server Token  
# Get from: https://github.com/settings/tokens?type=beta
# Required permissions: Contents (Read/Write), Metadata (Read), Pull requests (Read/Write)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_personal_access_token_here

# =================================
# DEVELOPMENT TOOLS - SUPABASE CLI (OPTIONAL)
# =================================
# Use these for direct database operations (migrations, local dev, full control)
# Examples: "supabase db push", "supabase gen types", "supabase start"

# Database URL for direct connections and CLI operations
# Format: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your_database_password@db.jjpklpivpvywagmjjwpu.supabase.co:5432/postgres

# Supabase CLI Database Password (for migrations and direct access)
# Get from: https://supabase.com/dashboard/project/jjpklpivpvywagmjjwpu/settings/database
SUPABASE_DB_PASSWORD=your_database_password_here

# =================================
# APPLICATION CONFIGURATION (OPTIONAL)
# =================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

